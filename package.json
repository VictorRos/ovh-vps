{
	"name": "ovh-vps",
	"version": "1.1.0",
	"description": "Documentation pour la configuration d'un VPS OVH",
	"main": "index.js",
	"scripts": {
		"clean": "rm -rf megalinter-reports",
		"lint:ansible": "ansible-lint --config-file .ansible-lint.yml --project-dir ansible",
		"mega-linter": "rm -rf megalinter-reports && npx -y mega-linter-runner@9.3.0 --release v9.3.0 --flavor terraform --remove-container",
		"prepare": "bash scripts/prepare.sh",
		"prettier": "prettier --write --config .prettierrc.yaml --ignore-unknown .",
		"update-dependencies": "npx -y npm-check-updates -i"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:VictorRos/ovh-vps.git"
	},
	"keywords": [
		"Ansible",
		"Configuration",
		"OVH",
		"VPS"
	],
	"author": "Victor Ros",
	"license": "SEE LICENSE IN LICENSE",
	"lint-staged": {
		"**/{.*,*}": "prettier --write --config .prettierrc.yaml --ignore-unknown"
	},
	"validate-branch-name": {
		"pattern": "^(master|develop)$|^(feature|bugfix|hotfix|release)/.+$",
		"errorMsg": "ðŸ¤¨ The branch you try to push does not respect our conventions, you can rename it with `git branch -m <current-name> <new-name>`"
	},
	"devDependencies": {
		"@cspell/dict-bash": "^4.2.2",
		"@cspell/dict-companies": "^3.2.10",
		"@cspell/dict-css": "^4.0.19",
		"@cspell/dict-docker": "^1.1.17",
		"@cspell/dict-fr-fr": "^2.3.2",
		"@cspell/dict-git": "^3.1.0",
		"@cspell/dict-html": "^4.0.14",
		"@cspell/dict-k8s": "^1.0.12",
		"@cspell/dict-markdown": "^2.0.14",
		"@cspell/dict-node": "^5.0.9",
		"@cspell/dict-npm": "^5.2.30",
		"@cspell/dict-powershell": "^5.0.15",
		"@cspell/dict-python": "^4.2.25",
		"@cspell/dict-software-terms": "^5.1.20",
		"@cspell/dict-sql": "^2.2.1",
		"@cspell/dict-typescript": "^3.2.3",
		"husky": "^9.1.7",
		"prettier": "^3.8.1",
		"prettier-plugin-sh": "^0.18.0"
	}
}
